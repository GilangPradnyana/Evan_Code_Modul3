/*
 * PROGRAM TUGAS MANDIRI 2 - Modul 3 (Versi Sederhana)
 * Program ini menentukan nilai huruf (A, B, C, D, E) berdasarkan
 * nilai UTS dan UAS.
 */

// Hanya butuh iostream untuk input dan output
#include <iostream>

using namespace std;

int main() {
    // --- 1. DEKLARASI VARIABEL ---
    float nilaiUTS, nilaiUAS;
    char nilaiHuruf;

    // --- 2. INPUT DARI KEYBOARD ---
    
    cout << "--- Program Penentuan Nilai Huruf ---" << endl;
    
    cout << "Masukkan Nilai UTS: ";
    cin >> nilaiUTS; // Input sederhana
    
    cout << "Masukkan Nilai UAS: ";
    cin >> nilaiUAS; // Input sederhana

    // --- 3. PROSES PENENTUAN NILAI (LOGIKA IF-ELSE IF) ---
    
    // Kita cek dari syarat tertinggi (A) ke terendah (E).
    // Operator && (DAN) berarti KEDUA kondisi harus terpenuhi.

    if (nilaiUTS >= 85 && nilaiUAS >= 85) {
        nilaiHuruf = 'A';
    } 
    // Jika tidak, cek kondisi B
    else if (nilaiUTS >= 70 && nilaiUAS >= 70) {
        nilaiHuruf = 'B';
    } 
    // Jika tidak, cek kondisi C
    else if (nilaiUTS >= 55 && nilaiUAS >= 55) {
        nilaiHuruf = 'C';
    } 
    // Jika tidak, cek kondisi D
    else if (nilaiUTS >= 40 && nilaiUAS >= 40) {
        nilaiHuruf = 'D';
    } 
    // 'else' ini akan menangkap SEMUA KASUS LAINNYA
    // (termasuk yang UTS < 40, atau salah satu nilai kecil)
    else {
        nilaiHuruf = 'E';
    }

    // --- 4. TAMPILKAN HASIL ---
    
    cout << "\n================ HASIL ===============" << endl;
    cout << "Nilai UTS Anda: " << nilaiUTS << endl;
    cout << "Nilai UAS Anda: " << nilaiUAS << endl;
    cout << "----------------------------------------" << endl;
    
    // Langsung tampilkan nilai huruf, karena sudah pasti A/B/C/D/E
    cout << "Nilai Huruf Anda adalah: " << nilaiHuruf << endl;
    
    cout << "=======================================" << endl;

    return 0; // Program selesai
}

======================================================================================================================================================================
======================================================================================================================================================================


/*
 * PROGRAM TUGAS MANDIRI 3 - Modul 3 (Versi Sederhana)
 * Program ini menggunakan operator pointer (& dan *)
 * untuk menampilkan nilai dan alamat memori dari variabel.
 */

#include <iostream>

using namespace std;

int main() {
    // --- 1. DEKLARASI VARIABEL ---
    
    // Variabel biasa
    int x = 10;
    int y = 20;

    // Variabel pointer (ditandai dengan *)
    // ptr_x akan menyimpan ALAMAT dari variabel x
    // ptr_y akan menyimpan ALAMAT dari variabel y
    int *ptr_x;
    int *ptr_y;

    // --- 2. PENGERJAAN (Assignment) POINTER ---
    
    // Gunakan operator & (address-of) untuk mendapatkan alamat 'x'
    // dan simpan alamat itu ke 'ptr_x'
    ptr_x = &x; 
    
    // Lakukan hal yang sama untuk y
    ptr_y = &y;

    // --- 3. TAMPILKAN HASIL ---
    
    cout << "--- Program Operator Pointer ---" << endl;
    
    cout << "\n--- Variabel x ---" << endl;
    // Tampilkan nilai x
    cout << "Nilai x \t\t: " << x << endl; 
    // Tampilkan alamat x (Alamat memori akan berbeda di tiap komputer)
    cout << "Alamat x (&x) \t\t: " << &x << endl;
    // Tampilkan alamat yang disimpan oleh pointer
    cout << "Isi ptr_x \t\t: " << ptr_x << endl; 
    // Tampilkan nilai yang ditunjuk pointer (dereference)
    cout << "Nilai (*ptr_x) \t\t: " << *ptr_x << endl; 

    cout << "\n--- Variabel y ---" << endl;
    // Tampilkan nilai y
    cout << "Nilai y \t\t: " << y << endl;
    // Tampilkan alamat y
    cout << "Alamat y (&y) \t\t: " << &y << endl;
    // Tampilkan alamat yang disimpan oleh pointer
    cout << "Isi ptr_y \t\t: " << ptr_y << endl;
    // Tampilkan nilai yang ditunjuk pointer (dereference)
    cout << "Nilai (*ptr_y) \t\t: " << *ptr_y << endl;

    cout << "\n================================" << endl;

    return 0; // Program selesai
}
