/*
 * PROGRAM TUGAS MANDIRI 1 - Modul 3
 * Nama     : [Silakan isi nama Anda]
 * NIM      : [Silakan isi NIM Anda]
 *
 * Program ini menghitung tiga persamaan matematika berdasarkan
 * satu input 'x' dari pengguna.
 */

// Library untuk input-output (cin, cout)
#include <iostream>
// Library untuk fungsi matematika, khususnya pow() (pangkat)
#include <cmath>
// Library untuk validasi input
#include <limits>
// Library untuk memformat output desimal
#include <iomanip>

// Menggunakan namespace standar C++
using namespace std;

int main() {
    // --- 1. DEKLARASI VARIABEL ---

    // 'double' digunakan agar 'x' bisa menampung angka desimal (pecahan).
    double x; 
    
    // Variabel untuk menyimpan hasil persamaan 1 (juga double)
    double hasil1;
    
    // Variabel integer khusus untuk persamaan 3 (modulus)
    int x_bulat;
    int hasil3;

    // --- 2. INPUT DARI KEYBOARD (dengan Validasi) ---
    
    cout << "--- Program Perhitungan 3 Persamaan ---" << endl;
    cout << "Masukkan nilai x (bisa desimal): ";

    // Loop validasi: Terus meminta input jika yang dimasukkan BUKAN angka
    while (!(cin >> x)) {
        cout << "Input tidak valid. Harap masukkan sebuah ANGKA: ";
        // 1. Bersihkan status error dari cin
        cin.clear(); 
        // 2. Abaikan sisa input yang salah di baris sebelumnya
        cin.ignore(numeric_limits<streamsize>::max(), '\n'); 
    }

    // --- 3. PROSES PERHITUNGAN & OUTPUT ---
    
    // Mengatur output desimal agar menampilkan 2 angka di belakang koma
    cout << fixed << setprecision(2);
    
    cout << "\n================ HASIL ===============" << endl;
    cout << "Untuk nilai x = " << x << endl;
    cout << "----------------------------------------" << endl;

    // --- Persamaan 1: -2x³ + x² - 6 ---
    // Menggunakan fungsi pow(basis, pangkat) dari <cmath>
    
    hasil1 = (-2 * pow(x, 3)) + (pow(x, 2)) - 6;
    
    cout << "1. Hasil -2x^3 + x^2 - 6 \t= " << hasil1 << endl;

    // --- Persamaan 2: -(x+x) / (x-x) ---
    // Ini adalah kasus khusus: Pembagian dengan Nol (Divide by Zero).
    // Penyebut (x-x) akan SELALU bernilai 0.
    // Kita tidak boleh menghitungnya, jadi kita langsung beri keterangan.
    
    cout << "2. Hasil -(x+x) / (x-x) \t= TIDAK TERDEFINISI" << endl;
    cout << "   (Alasan: Terjadi pembagian dengan nol)" << endl;


    // --- Persamaan 3: x mod 2 ---
    // Ini kasus khusus: Operator Modulus (%) hanya untuk INTEGER.
    // Kita harus mengubah 'x' (double) menjadi 'int' terlebih dahulu.
    
    // 1. Casting 'x' menjadi integer (bagian desimal akan dipotong)
    x_bulat = (int)x;
    
    // 2. Lakukan operasi modulus (%) pada versi integer-nya
    hasil3 = x_bulat % 2;
    
    cout << "3. Hasil x mod 2 \t\t= " << hasil3 << endl;
    cout << "   (Dihitung sebagai: " << x_bulat << " % 2)" << endl;

    cout << "=======================================" << endl;

    // return 0 menandakan program selesai dengan sukses
    return 0; 
}

